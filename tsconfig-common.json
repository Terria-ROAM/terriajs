{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true, // required for mobx6 - https://mobx.js.org/installation.html#use-spec-compliant-transpilation-for-class-properties
    "resolveJsonModule": true,
    "typeRoots": ["./src/ThirdParty", "./node_modules", "../../node_modules"],
    "types": [
      "cesium",
      "assimpjs",
      "mapbox__geojson-merge",
      "mapbox__point-geometry",
      "mapbox__vector-tile",
      "pmtiles",
      "react-anything-sortable",
      "react-shallow-testutils",
      // "styled-components",
      "thredds-catalog-crawler",
      "urijs"
    ]
  }
}
